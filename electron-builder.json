{
  "appId": "com.screenshot.ai",
  "productName": "Screenshot AI",
  "directories": {
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "build/icon.png",
    "category": "Utility"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "build/icon.icns"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  }
}
